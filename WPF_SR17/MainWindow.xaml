<Window x:Class="WPF_SR17.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_SR17"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <local:ColorPicker x:Name="colorPicker" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="200" ColorChanged="colorPicker_ColorChanged"/>
            <TextBlock x:Name="textblock" Text="Привет!" Margin="10" Padding="10" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
